@model Books

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Book</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="BookName">Book Name</label>
            <input asp-for="BookName" class="form-control"/>
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookType">Book Type</label>
            <input asp-for="BookType" class="form-control"/>
            <span asp-validation-for="BookType" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="BookAuthor">Book Author</label>
            <input asp-for="BookAuthor" class="form-control"/>
            <span asp-validation-for="BookAuthor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookPublisher">Book Publisher</label>
            <input asp-for="BookPublisher" class="form-control"/>
            <span asp-validation-for="BookPublisher" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDateTime">Created DateTime</label>
            <input asp-for="CreatedDateTime" class="form-control"/>
            <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="BooksController1" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>

</form>

@section Scripts{
   @{
       <partial name="_ValidationScriptsPartial"/>
    }
}