@model IEnumerable<Books>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
         <div class="col-6 text-end">
             <a asp-controller="BooksController1" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp Add Book</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
           <th>BookID</th>
           <th>BookName</th>
           <th>BookType</th>
           <th>BookAuthor</th>
           <th>BookPublisher</th>
           <th>CreatedDateTime</th>
           <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width = "5%">
                    @item.BookID
                </td>
                <td width = "20%">
                    @item.BookName
                </td>
                    <td width = "20%">
                    @item.BookType
                </td>
                    <td width = "20%">
                    @item.BookAuthor
                </td>
                    <td width = "30%">
                    @item.BookPublisher
                </td>
                    <td width = "30%">
                    @item.CreatedDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="BooksController1" asp-action="Edit" asp-route-BookID="@item.BookID"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="BooksController1" asp-action="Delete" asp-route-BookID="@item.BookID" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>